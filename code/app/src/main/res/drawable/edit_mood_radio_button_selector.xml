<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#4A6A90" />
            <stroke android:width="1dp" android:color="#6A8CAE" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#3A506B" />
            <stroke android:width="1dp" android:color="#5A7A9E" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#2C3E50" />
            <stroke android:width="1dp" android:color="#4A6A90" />
        </shape>
    </item>
</selector>