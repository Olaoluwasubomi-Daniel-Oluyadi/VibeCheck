<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nav_bar_background"
    android:paddingTop="2dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/navbar_container"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="Home"
            android:focusable="true"
            android:src="@drawable/homesymbol"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="2dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="Feed"
            android:focusable="true"
            android:src="@drawable/search_symbol" />

        <ImageView
            android:id="@+id/btn_create"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="Create New Post"
            android:focusable="true"
            android:src="@drawable/nav_bar_create_mood_background"
            android:foreground="@drawable/plussymbol"
            android:foregroundGravity="center" />


        <ImageView
            android:id="@+id/btn_map"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="Map"
            android:focusable="true"
            android:src="@drawable/mapsymbol"
            app:tint="#DDDDDD" />

        <ImageView
            android:id="@+id/btn_profile"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="Profile"
            android:focusable="true"
            android:src="@drawable/profilesymbol" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>